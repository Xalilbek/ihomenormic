                    ti++;
                }
            }
        }else{
            newTarifssTimeOdds[ti] = timeIntervalBase;
        }
        tarifssTimeOdds[tariffKey] = newTarifssTimeOdds;
        arrangeChildTimeOdds(tariffKey);
